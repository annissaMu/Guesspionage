<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Node Starter</title>
    <!-- load local stylesheet (css) -->
    <link rel="stylesheet" href="/styles.css" />
    <!-- loading jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <h1>Game Results</h1>
    <ul>
        <% for (let i = 0; i < questionsList.length; i++) { %>
            <li>
                <strong>Question:</strong> <%= questionsList[i].question %><br>
                <strong>User's Answer:</strong> <%= eval("answer" + (i)) %>%<br>
                <strong>Correct Answer:</strong><%= questionsList[i].percentage %>%
            </li>
        <% } %>
    </ul>
    <h2>Final Score: <%= score %>/100</h2>

    <h1>Leaderboard</h1>
    <% if (typeof leaderboard !== 'undefined' && leaderboard.length > 0) { %>
        <table>
            <tr>
                <th>Rank</th>
                <th>Username</th>
                <th>High Score</th>
            </tr>
            <% leaderboard.forEach(function(user, index) { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= user.username %></td>
                    <td><%= user.highScore %></td>
                </tr>
            <% }); %>
        </table>
    <% } else { %>
        <p>No games have been played yet.</p>
    <% } %>

</body>
</html>
