<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Node Starter</title>
    <link rel="stylesheet" href="/styles.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <h1>Game Results</h1>
    
        <% questionsList.forEach(function (question, index) { %>
            <div class="game">
            <h2>Question: <%= question.question %></h2>
            <p><strong>User's Answer:</strong> <%= eval("answer" + index) %>%<br>
            <strong>Correct Answer:</strong> <%= question.percentage %>%</p>
            </div>
        <% }); %>
    
    <h3>Final Score: <%= score %>/100</h3>

    <!-- button for navigating back to home page -->
        <a href="/" >
            <button>Home Page</button>
        </a>
        <a href="/baseQs/">
            <button>Play Again</button>
        </a>

    <!-- leaderboard table -->
    <h1>Leaderboard</h1>
    <% if (leaderboard && leaderboard.length > 0) { %>
        <table>
            <tr>
                <th>Rank</th>
                <th>Username</th>
                <th>High Score</th>
            </tr>
            <% leaderboard.forEach(function (user, index) { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= user.username %></td>
                    <td><%= user.topscore %></td>
                </tr>
            <% }); %>
        </table>
    <% } else { %>
        <p>No games have been played yet.</p>
    <% } %>
</body>
</html>
