<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Node Starter</title>
    <!-- load local stylesheet (css) -->
    <link rel="stylesheet" href="/styles.css" />
    <!-- loading jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>

    <% let i = 0 %>

  <h1>Game Page</h1>
  
    <form class="game"
    method="POST"
    action="/results/">
      <% questionsList.forEach( (question) => {%>
        <% const name = "answer" + i %>
        <div>
            <h2>What percentage of people... <%= question.question %></h2>
        
            <p><label>Percentage: <input name=<%= name %> value="00">%</label></p>
        </div>
        <% i++ %>
      <% }); %>
      <p><button type="submit">Submit</button></p>
    </form>

    <!-- load local js -->
    <script src="/main.js"></script>
</body>
</html>
